#!/bin/sh

if [ -z "$MESA_TOOLING_DEV_DIR" ]; then
    export MESA_TOOLING_DEV_DIR=$HOME/dev
fi

if [ -z "$MESA_TOOLING_BUILD_DIR" ]; then
    export MESA_TOOLING_BUILD_DIR=$HOME/build
fi

export MESA_BUILD_BASE_DIR=$MESA_TOOLING_BUILD_DIR/mesa
export VK_GL_CTS_BUILD_DIR=$MESA_TOOLING_BUILD_DIR/VK-GL-CTS

export MESA_ROOT_DIR=$MESA_TOOLING_DEV_DIR/mesa
export VK_GL_CTS_ROOT_DIR=$MESA_TOOLING_DEV_DIR/VK-GL-CTS

export VULKAN_CTS_PATH=$VK_GL_CTS_ROOT_DIR/external/vulkancts
export OPENGL_CTS_PATH=$VK_GL_CTS_ROOT_DIR/external/openglcts
